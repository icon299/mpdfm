<!doctype html>
<html class="no-js" lang="">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="default">

    <title>MPD.FM</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="manifest" href="site.webmanifest">
    <link rel="apple-touch-icon" href="favicon.png">

    <link href="https://fonts.googleapis.com/css?family=Oswald:400,500&amp;subset=cyrillic" rel="stylesheet">

    <link rel="stylesheet" href="css/pure-min.css">
    <link rel="stylesheet" href="css/main.css">
  </head>
  <body>

    <div class="pure-g menuheader" style="display:none;">
      <div class="pure-u-1 menuheader-context">
        <a href="/">Radio</a>
        <a href="/playlist">Playlists</a>
      </div>
    </div>

    <div id="app">
      <div class="content">

<!--       <div class="log-message" style="display:none;">
        <div class="pure-g log-content">
          <div class="pure-u-1 l-box">
            <p class="log-heading">...</p>
          </div>
        </div>
      </div> -->

        <div id="rs">
          <% if (item.length) { %>
            <% item.forEach(function(item){ %>
              <div class="pure-g" onclick="onPlayList('<%= item.playlist %>')">
                <div class="pure-u-1-4 l-box">
                  <div class="station-logo">
                    <img class="pure-img" src="/img/station_logo/melody.png" alt="<%= item.station %>">
                  </div>
                </div>
                <div class="pure-u-3-4 l-box2 station-text">
                  <div class="station-text-inside">
                    <p class="station-heading"><%= item.playlist %></p>
                    <p><%= item.desc %></p>
                  </div>
                </div>
              </div>
            <% }) %>
          <% } %>
        </div>
        <div class="pure-g blank-radio">
          <div class="pure-u-1-4 l-box">
            <div class="station-logo">
              <img class="pure-img" src="data:image/gif;base64,R0lGODlhAQABAAD/ACwAAAAAAQABAAACADs=">
            </div>
          </div>
          <div class="pure-u-3-4 l-box">
          </div>
        </div>
      </div>
      <div class="player">
        <div class="pure-g player-content">
          <div class="pure-u-1-4 l-box">
            <div class="station-logo">
              <img class="pure-img" id="station_logo" src="" alt="item.station">
              <!-- <img class="pure-img play-button" id="PlayerButton" src="img/pause.svg"> -->
            </div>
          </div>
          <div class="pure-u-3-4 r-box station-text">
            <div class="station-text-inside">
              <p class="station-heading" id="station">{{ station name }}</p>
              <p id="song">{{ song }}</p>
              <p class="station-heading" id="elapsed">{elapsed}</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="js/vendor/reconnecting-websocket.min.js"></script>
    <script src="js/main.js"></script>
  </body>
</html>
