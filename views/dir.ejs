    <div id="rs">
      <% if (item.length) { %>
        <% item.forEach(function(item){ %>
        <% if (item.type !== 'playlist') { %>
          <div class="pure-g">
            <div class="pure-u-1-4 l-box">
              <% if (item.parent == '') { %>
                <a href='mb?d=<%=item.name%>'> 
                  <!-- <div class="station-logo"> -->
                  <!-- onclick='location.href="/mb?d=<%=item.name%>";'> -->
              <%} else { %>
                <a href='mb?d=<%=item.parent%>/<%=item.name%>'> 
                  <!-- <div class="station-logo"> -->
                  <!-- onclick='location.href="/mb?d=<%=item.parent%>/<%=item.name%>";'> -->
              <%}%>
                  <div class="station-logo">
                    <% if (item.type == 'directory') { %> 
                      <img class="pure-img" src="/img/folder.png" alt="">
                    <%} else %>
                      <% if (item.type == 'file') { %> 
                        <img class="pure-img" src="/img/double_note.png" alt="">
                      
                    <%} else %> 
                      <% if (item.type == 'playlist') { %> 
                        <img class="pure-img" src="/img/playlist.png" alt="">
                      <%}%>
                  </div>
                  </a>
            </div>
              
              <div class="pure-u-3-4" style="padding-top: 0.5em;">
                <div class="station-text-inside">
                  <p class="station-heading"><%= item.name %></p>
                                  <img class="" src="/img/add_folder.png" alt="" style="margin-top: 1.5em;" onclick="onAddToQuenue('<%=item.parent%>/<%=item.name%>')">
                  
                </div>
              </div>
              
            </div>
        <% } %>
        <% }) %>
      <% } %>
    </div> 
    <div class="pure-g blank-radio">
