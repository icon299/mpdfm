<div class="content" >
  <div id="mystations" >
    <% if (item.length) { %>
      <% item.forEach(function(item){ %>
      <% if (item.type !== 'playlist') { %>
        <div class="pure-g">
          <% if (item.type == 'directory') { %> 
          <div class="pure-u-1-4 l-box" onclick="getPage('mb?d=<%=item.path%>')">
            <div class="station-logo">
              <img class="pure-img" src="/img/folder.png" alt="">
            </div>
          </div>
          <%} else %>
          <% if (item.type == 'file') { %> 
          <div class="pure-u-1-4 l-box">
            <div class="station-logo">
              <img class="pure-img" src="/img/double_note.png" alt="">
            </div>
          </div>
          <%} else %> 
          <% if (item.type == 'playlist') { %> 
          <div class="pure-u-1-4 l-box" onclick="getPage(<%=item.path%>)">
            <div class="station-logo">
              <img class="pure-img" src="/img/playlist.png" alt="">
            </div>
          </div>          
          <%}%>
                
              
          
          <div class="pure-u-7-8 l-box2 station-text" >
            <div class="station-text-inside">
              <p class="station-heading"><%= item.name%></p>
                <img class="" src="/img/add_folder.png" alt="" style=" float: right;" 
                onclick="onAddToQuenue('<%=item.path%>')" style="float: right; font-size: 100%; border-radius: 22px; background-color: #932cc9">
                <!-- +</button> -->
            </div>
          </div>
        </div>
        <% } %>
     <% }) %>
    <% } %>
    
